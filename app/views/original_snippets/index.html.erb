<div class="tab-box">

  <ul class="tab-nav">
    <button class ="language-btn" id="recent">Recent Posts</button>
    <button class="language-btn" id="ruby">Ruby Posts</button>
    <button class="button language-btn" id="javascript">JavaScript Posts</button>
    <button class="language-btn" id="java">Java Posts</button>
    <button class="language-btn" id="python">Python Posts</button>
  </ul>

  <div class="recent-posts">
    <h2>Recent Posts</h2>
    <ul><% @recent.each do |original_snippet| %>
      <li><%= link_to original_snippet.title, original_snippet%></li>
    <% end %>
    </ul>
  </div>

  <div class="ruby-posts">
    <h2>Ruby Posts</h2>
    <ul><% @ruby_entries.each do |original_snippet| %>
      <li><%= link_to original_snippet.title, original_snippet%></li>
    <% end %>
    </ul>
  </div>

  <div class="javascript-posts">
    <h2>JavaScript Posts</h2>
    <ul><% @js_entries.each do |original_snippet| %>
      <li><%= link_to original_snippet.title, original_snippet%></li>
    <% end %>
    </ul>
  </div>
</div>
